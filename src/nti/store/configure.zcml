<!-- -*- mode: nxml -*- -->
<configure	xmlns="http://namespaces.zope.org/zope"
			xmlns:i18n="http://namespaces.zope.org/i18n"
			xmlns:zcml="http://namespaces.zope.org/zcml">

	<include package="zope.component" file="meta.zcml" />
	<include package="zope.security" file="meta.zcml" />
	<include package="zope.component" />

	<include package=".payments" file="configure.zcml" />

	<adapter factory=".purchase_history._PurchaseHistoryFactory"
			 for="nti.dataserver.interfaces.IUser"
			 provides=".interfaces.IPurchaseHistory" />

	<subscriber handler=".subscribers._purchase_attempt_started" />
	<subscriber handler=".subscribers._purchase_attempt_successful" />
	<subscriber handler=".subscribers._purchase_attempt_failed" />
	<subscriber handler=".subscribers._purchase_attempt_refunded" />
	<subscriber handler=".subscribers._purchase_attempt_synced" />
	<subscriber handler=".subscribers._purchase_attempt_disputed" />
	<subscriber handler=".subscribers._purchase_invitation_accepted" />
	<subscriber handler=".subscribers._enrollment_attempt_successful" />
	<subscriber handler=".subscribers._unenrollment_attempt_successful" />

	<adapter factory=".externalization.PriceableExternal" />
	<adapter factory=".externalization.PricedItemExternal" />
	<adapter factory=".externalization.PurchasableExternal" />
	<adapter factory=".externalization.PurchaseItemExternal" />
	<adapter factory=".externalization.PurchaseOrderExternal" />
	<adapter factory=".externalization.PurchaseErrorExternal" />
	<adapter factory=".externalization.PricingResultsExternal" />
	<adapter factory=".externalization.PurchaseAttemptExternal" />
	<adapter factory=".externalization.RedeemedPurchaseAttemptExternal" />
	<adapter factory=".externalization.InvitationPurchaseAttemptExternal" />

	<adapter factory=".purchase_error.nti_store_exception_adpater"
			 provides=".interfaces.IPurchaseError"
			 for=".interfaces.INTIStoreException" />

	<subscriber factory=".externalization.PurchasableDecorator"
				for=".interfaces.IPurchasable"
				provides="nti.externalization.interfaces.IExternalObjectDecorator"/>

	<subscriber factory=".externalization.CourseDecorator"
				for=".interfaces.ICourse"
				provides="nti.externalization.interfaces.IExternalObjectDecorator"/>

	<subscriber factory=".externalization.PurchaseAttemptDecorator"
				for=".interfaces.IPurchaseAttempt"
				provides="nti.externalization.interfaces.IExternalObjectDecorator"/>

	<subscriber factory=".externalization.PricedItemDecorator"
				for=".interfaces.IPricedItem"
				provides="nti.externalization.interfaces.IExternalObjectDecorator"/>

	<utility factory=".purchasable.ZcmlPurchasableStore" />

	<utility component=".purchasable.PurchasableTokenVocabulary"
			 provides="zope.schema.interfaces.IVocabularyFactory"
			 name="nti.store.purchasable.vocabulary" />

	<utility factory=".pricing.DefaultPurchasablePricer" />

	<utility factory=".purchasable._PurchasableResolver" name="purchasable" />
	<utility factory=".course._CourseResolver" name="course" />

	<!--
		The purchasables included in here are only for test purposes
	-->
	<include file="_sample.zcml" zcml:condition="have devmode"/>

</configure>
